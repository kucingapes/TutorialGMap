<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kucingapes.utsman.tutorialgmap.Maps_1"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/map1"
        tools:context=".Maps_1"
        android:layout_weight="2"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pelajari"
        android:onClick="Map1code"
        android:id="@+id/bmap1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/codemap1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode pada layout XML"/>

        <com.pddstudio.highlightjs.HighlightJsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/code_xml"/>

        <com.pddstudio.highlightjs.HighlightJsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/code"/>



    </LinearLayout>

</LinearLayout>
